<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="com.nextep.designer.diagram.model.presentation.ModelModelWizardID"
            name="%_UI_ModelModelWizard_label"
            class="com.nextep.designer.diagram.model.presentation.ModelModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/ModelModelFile.gif">
         <description>%_UI_ModelModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="com.nextep.designer.diagram.model.presentation.ModelEditorID"
            name="%_UI_ModelEditor_label"
            icon="icons/full/obj16/ModelModelFile.gif"
            extensions="model"
            class="com.nextep.designer.diagram.model.presentation.ModelEditor"
            contributorClass="com.nextep.designer.diagram.model.presentation.ModelActionBarContributor">
      </editor>
   </extension>

</plugin>
